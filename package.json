{
  "name": "unveil.js",
  "description": "Next-gen presentation framework",
  "author": "Leandro Ostera <leandro@ostera.io>",
  "repository": "https://github.com/ostera/unveil.js",
  "bugs": {
    "url": "https://github.com/ostera/unveil.js/issues"
  },
  "homepage": "https://github.com/ostera/unveil.js",
  "license": "MIT",
  "version": "2.1.0",
  "main": "src/app.js",
  "dependencies": {
    "axios": "^0.8.1",
    "babel-runtime": "^5.8.20",
    "history": "^1.17.0",
    "immutable": "^3.7.6",
    "marked": "^0.3.5",
    "moment": "^2.11.0",
    "object-assign": "^3.0.0",
    "react": "^0.13.3",
    "rxjs": "^5.0.0-beta.1"
  },
  "devDependencies": {
    "babelify": "^6.1.3",
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.4.19",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "watchify -t [envify --NODE_ENV local] -o build/bundle.js -v -d src/app.js & sass -w ./styles:./build",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > build/bundle.js; sass --update ./styles:./build",
    "test": "jest"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "optional": [
            "runtime"
          ]
        }
      ],
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./src"
  }
}
