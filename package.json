{
  "name": "unveil",
  "description": "Next-gen presentation framework",
  "author": "Leandro Ostera <leandro@ostera.io>",
  "repository": "https://github.com/ostera/unveil.js",
  "bugs": {
    "url": "https://github.com/ostera/unveil.js/issues"
  },
  "homepage": "https://github.com/ostera/unveil.js",
  "license": "MIT",
  "version": "0.1.0",
  "main": "src/app.js",
  "dependencies": {
    "history": "^1.17.0",
    "immutable": "^3.7.6",
    "marked": "^0.3.5",
    "react": "^0.14.6",
    "react-addons-css-transition-group": "^0.14.6",
    "react-dom": "^0.14.6",
    "rx-history": "^1.0.2",
    "rxjs": "^5.0.0-beta.1"
  },
  "devDependencies": {
    "react-addons-test-utils": "^0.14.6",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^6.2.0",
    "envify": "^3.0.0",
    "jest-cli": "^0.8.2",
    "babel-jest": "^6.0.1",
    "reactify": "^0.15.2",
    "uglify-js": "~2.4.15",
    "watchify": "^2.1.1"
  },
  "scripts": {
    "start": "watchify -t [envify --NODE_ENV local] -o build/bundle.js -v -d src/app.js & sass -w ./styles:./build",
    "build": "browserify . -t [envify --NODE_ENV production] | uglifyjs -cm > build/bundle.js; sass --update ./styles:./build",
    "test": "jest"
  },
  "browserify": {
    "transform": [
      "babelify",
      "reactify",
      "envify"
    ]
  },
  "jest": {
    "scriptPreprocessor": "<rootDir>/node_modules/babel-jest",
    "unmockedModulePathPatterns": [
      "<rootDir>/node_modules"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/build/",
      "<rootDir>/styles/"
    ]
  }
}
